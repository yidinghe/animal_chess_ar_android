<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_chessman_panel"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:background="@drawable/chessman_panel_bg"
    android:orientation="horizontal"
    android:padding="4dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="5dp">
        <TextView
            android:id="@+id/chessman_name_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Animal Name: "
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/chessman_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rat"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/chessman_rule_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movement Rule:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/chessman_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="One square horizontally or vertically"
            android:textColor="@color/white"
            android:textStyle="normal"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/chessman_sp_rule_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Rule:"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/chessman_sp_rule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allowed to go onto a water square"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap one of the arrows to move this animal:"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <ImageButton
                android:visibility="invisible"/>
            <ImageButton
                android:id="@+id/btn_forward"
                android:src="@drawable/ic_arrow_upward_white"/>
            <ImageButton
                android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/btn_left"
                android:src="@drawable/ic_arrow_left_white"/>
            <ImageButton
                android:visibility="invisible"/>
            <ImageButton
                android:id="@+id/btn_right"
                android:src="@drawable/ic_arrow_right_white"/>
            <ImageButton
                android:visibility="invisible"/>
            <ImageButton
                android:id="@+id/btn_back"
                android:src="@drawable/ic_arrow_downward_white"/>
            <ImageButton
                android:visibility="invisible"/>

        </GridLayout>

    </LinearLayout>
</LinearLayout>
